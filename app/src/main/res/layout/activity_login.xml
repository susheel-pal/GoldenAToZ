<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_login_final_02"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/show_logo"
        android:layout_width="240dp"
        android:layout_height="194dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/logo2"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/show_goldenAZ"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show_goldenAZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="34dp"
        android:textColor="@color/golden"
        android:textAlignment="center"
        android:text="Golden AZ"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_logo"
        tools:layout_editor_absoluteY="264dp"
        android:background="@drawable/edit_background"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/show_enter_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/quiz_login_final_05"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_goldenAZ"/>

    <EditText
        android:id="@+id/edit_enter_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Number"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="14dp"
        android:singleLine="true"
        android:background="@drawable/edit_text_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/show_enter_number"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_enter_number"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:onClick="verifyNumberBtn"
        android:padding="10dp"
        android:paddingLeft="44dp"
        android:paddingStart="44dp"
        android:paddingRight="44dp"
        android:paddingEnd="44dp"/>

    <ProgressBar
        android:id="@+id/verifyprogressbar_id"
        style="?android:attr/progressBarStyle"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:visibility="invisible"
        android:theme="@style/AppTheme.WhiteAccent"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/login_button"
        app:layout_constraintEnd_toEndOf="@id/login_button"
        app:layout_constraintTop_toTopOf="@id/login_button" />

    <TextView
        android:id="@+id/fillnumber_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:text="textview"
        android:textColor="@android:color/holo_red_light"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_button" />

    <ImageView
        android:id="@+id/show_term_and_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/quiz_login_final_10"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_button"/>



</androidx.constraintlayout.widget.ConstraintLayout>